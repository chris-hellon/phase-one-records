@model PhaseOneRecords.Models.ArtistModel

@{
    var imageUrl = Model.Images != null && Model.Images.Count > 0 ? Model.Images.First() : "";
    decimal? price = Model.Prices != null && Model.Prices.Count > 0 ? Model.Prices.First() : new decimal?();

    <div class="row mt-3">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <img class="img-thumbnail loading" src="@imageUrl" />
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 mt-3">
            <h4><span class="light-blue-fg">BAND // </span><a class="titling" href="@Url.Action("Index", "Browse", new { @searchArtist = Model.ArtistName })">@Model.ArtistName.ToUpper()</a></h4>
            <h4><span class="light-blue-fg">ALBUM // </span><a class="titling" href="@Url.Action("Index", "Browse", new { @searchAlbum = Model.AlbumName, @searchArtist = Model.ArtistName })">@Model.AlbumName.ToUpper()</a></h4>
            <h4><span class="light-blue-fg">PRICE // </span><span class="titling">£@price</span></h4>
            <p>@Model.Description</p>
        </div>
    </div>
}